generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   BigInt  @id
  name String?

  habitue   Habitue?
  streamers Streamers?

  type UserType
}

model Habitue {
  id_    Int     @id @default(autoincrement())
  color  String? @default("#FFFFFF")
  userId BigInt  @unique

  user User @relation(fields: [userId], references: [id])
}

model Streamers {
  id_       Int    @id @default(autoincrement())
  streamUrl String
  userId    BigInt @unique

  user User @relation(fields: [userId], references: [id])
}

enum UserType {
  COMMON_USER
  HABITUE
  STREAMER
}
